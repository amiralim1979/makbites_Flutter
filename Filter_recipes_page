import 'package:flutter/material.dart';
import 'package:cloud_firestore/cloud_firestore.dart';

class FilterRecipesPage extends StatefulWidget {
  @override
  _FilterRecipesPageState createState() => _FilterRecipesPageState();
}

class _FilterRecipesPageState extends State<FilterRecipesPage> {
  String selectedFoodType = 'Ù‡Ù…Ù‡';
  String selectedPreference = 'Ù‡Ù…Ù‡';

  final List<String> foodTypes = ['Ù‡Ù…Ù‡', 'ØºØ°Ø§ÛŒ Ø§ØµÙ„ÛŒ', 'Ù¾ÛŒØ´â€ŒØºØ°Ø§', 'Ø¯Ø³Ø±', 'Ø§Ø³Ù†Ú©', 'Ù†Ø§Ù†', 'Ù¾ÛŒØ³ØªØ±ÛŒ', 'Ù†ÙˆØ´ÛŒØ¯Ù†ÛŒ', 'Ø³Ø§Ù„Ø§Ø¯'];
  final List<String> preferences = ['Ù‡Ù…Ù‡', 'Ú¯ÛŒØ§Ù‡Ø®ÙˆØ§Ø±ÛŒ', 'ÙˆÚ¯Ø§Ù†', 'ÙØ§Ù‚Ø¯ Ú¯Ù„ÙˆØªÙ†', 'Ø­Ø§ÙˆÛŒ Ù„Ø¨Ù†ÛŒØ§Øª', 'Ø¨Ø¯ÙˆÙ† Ú¯ÙˆØ´Øª'];

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('ğŸ” ÙÛŒÙ„ØªØ± Ø±Ø³Ù¾ÛŒâ€ŒÙ‡Ø§')),
      body: Column(
        children: [
          DropdownButton<String>(
            value: selectedFoodType,
            items: foodTypes.map((String type) {
              return DropdownMenuItem<String>(value: type, child: Text(type));
            }).toList(),
            onChanged: (value) => setState(() => selectedFoodType = value!),
          ),
          StreamBuilder(
            stream: FirebaseFirestore.instance.collection('user_recipes').snapshots(),
            builder: (context, AsyncSnapshot<QuerySnapshot> snapshot) {
              if (!snapshot.hasData) return Center(child: CircularProgressIndicator());

              var filteredRecipes = snapshot.data!.docs.where((doc) {
                return (selectedFoodType == 'Ù‡Ù…Ù‡' || doc['foodType'] == selectedFoodType);
              }).toList();

              return Expanded(
                child: ListView(
                  children: filteredRecipes.map((doc) {
                    return ListTile(title: Text(doc['name']));
                  }).toList(),
                ),
              );
            },
          ),
        ],
      ),
    );
  }
}

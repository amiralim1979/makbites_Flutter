import 'package:flutter/material.dart';

class CreateRecipePage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Create Custom Recipe'),
        backgroundColor: Color(0xFF2B4D3C), // رنگ سبز
      ),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text(
              'Enter Recipe Name:',
              style: TextStyle(fontSize: 16, color: Colors.black), // متن مشکی
            ),
            TextField(
              decoration: InputDecoration(
                border: OutlineInputBorder(),
                hintText: 'Recipe Name',
              ),
              style: TextStyle(color: Colors.black), // رنگ متن فیلد مشکی
            ),
            SizedBox(height: 16),
            Text(
              'Enter Ingredients:',
              style: TextStyle(fontSize: 16, color: Colors.black), // متن مشکی
            ),
            TextField(
              maxLines: 4,
              decoration: InputDecoration(
                border: OutlineInputBorder(),
                hintText: 'Ingredients',
              ),
              style: TextStyle(color: Colors.black), // رنگ متن فیلد مشکی
            ),
            SizedBox(height: 16),
            ElevatedButton(
              onPressed: () {
                print('Recipe created');
              },
              style: ElevatedButton.styleFrom(
                backgroundColor: Color(0xFF2B4D3C),
              ),
              child: Text(
                'Save Recipe',
                style: TextStyle(color: Colors.white), // رنگ متن سفید
              ),
            ),
          ],
        ),
      ),
    );
  }
}
